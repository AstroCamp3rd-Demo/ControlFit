<section class="section reset-pw">
  <div class="container">
    <div class="row">
      <h2 class="title">無法登入？</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field email">
          <%= f.label :email, '我們會將復原連結寄到' %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: "example@mail.com" %>
        </div>
         <div class="form-group">
          <%= f.submit "寄送復原連結",class: 'btn btn-danger btn-reset'%>
        </div>
      <% end %>
      <hr>
      <a href="/members/sign_in" class="bottom-form-link">返回登入</a>
    </div>
  </div>
</section>
