<section class="section edit-info col-12 col-md-4">
  <div class="container">
    <h2 class="title">修改個人資料</h2>
    <div class="row">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <div class="form-group">

          <%= image_tag @member.cover_image if @member.cover_image.attached? %>

          <%= f.label :cover_image, '大頭貼' %>
          <%= f.file_field :cover_image, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :name, '姓名' %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :gender, '性別', id:"member_gender" %>
          <%= f.select :gender, ['男性', '女性'], :prompt => '請選擇', class:"custom-select" %>
        </div>
        <div class="form-group">
          <%= f.label :age, '年齡（歲）' %>
          <%= f.number_field :age, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :cm, '身高(公分)' %>
          <%= f.number_field :cm, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :kg, '體重(公斤)' %>
          <%= f.number_field :kg, class: 'form-control' %>
        </div>
        <div class="actions">
          <%= f.submit '修改', class: 'btn btn-danger'  %>
        </div>
        <% end %>
    </div>
  </div>
</section>
