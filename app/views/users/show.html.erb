<section class="section others">
  <div class="container-fluid">
    <div class="row col-12 col-md-12">
      <div class="col image">
          <img src="https://images.unsplash.com/photo-1524253482453-3fed8d2fe12b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60" alt="following photo">
      </div>
      <div class="col other">
        <div class="col number-follwers d-flex align-items-center">
          <span><%= render 'shared/states' %></span>
          <span><%= render 'members/follow_form' %></span>
      </div>
        <form>
          <%= image_tag @member.cover_image.variant(resize_to_limit: [300, 300]) if @member.cover_image.attached? %>
          <div class="form-group row">
            <label for="staticEmail" class="col-sm-2 col-form-label">姓名</label>
            <div class="col-sm-10">
              <%= @member.name %>
            </div>
          </div>
          <div class="form-group row">
            <label for="staticEmail" class="col-sm-2 col-form-label">性別</label>
            <div class="col-sm-10">
              <%= @member.gender %>
            </div>
          </div>
          <div class="form-group row">
            <label for="staticEmail" class="col-sm-2 col-form-label">年齡</label>
            <div class="col-sm-10">
              <%= @member.age %>
            </div>
          </div>
          <div class="form-group row">
            <label for="staticEmail" class="col-sm-2 col-form-label">身高</label>
            <div class="col-sm-10">
              <%= @member.cm %>
            </div>
          </div>
          <div class="form-group row">
            <label for="staticEmail" class="col-sm-2 col-form-label">體重</label>
            <div class="col-sm-10">
              <%= @member.kg %>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>