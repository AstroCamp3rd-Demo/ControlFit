<container>
  <div class="row mt-3 mb-5">
    <div class="col-12 col-md-12 m-auto d-flex justify-content-center">
      <% if @member.cover_image.attached? %>
        <%= image_tag @member.cover_image.variant(resize_to_limit: [300, 300]), class:'rounded-circle show-img' %>
      <% else %>
        <img src="https://picsum.photos/300/300/?random=1" class="rounded-circle show-img"> 
      <% end %>
      <div>
        <div class="mb-3 m-auto show-card" style="max-width: 540px;">
          <div class="row no-gutters">
            <div class="col-md-12">
              <div class="card-body">
                <div class="d-flex justify-content-between mb-5" style="width: 200px;">
                  <h5 class="h5"><%= @member.name %></h5>
                  <%= render 'members/follow_form' %>
                </div>
                <span><%= render 'shared/states' %></span>
                <p class="card-text"></p>
                <p class="card-text"><small class="text-muted"></small></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</container>

<container>
  <div class="row">
    <div class="col-12 col-md-6 mb-5">
      <div>
        <canvas id="heyChart"></canvas>
      </div>
      <script>
        var ctx = document.getElementById("heyChart");
        var myChart = new Chart(ctx, {
          type: 'pie',
          data: {
            labels: ["熱量", "運動"],
            datasets: [{
              label: ['消耗'],
              data: [
                '<%= @calories.sum %>',
                '<%= @sprot_calories.sum %>',
            ],
              backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)'
              ],
              borderColor: [
                'rgba(255,99,132,1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)'
              ],
              borderWidth: 1
            }]
          },
          options: {
            scales: {
              yAxes: [{
                ticks: {
                  beginAtZero:true,
                }
              }]
            }
          }
        });
      </script> 
    </div> 
    <div class="col-12 col-md-6">
        <li>
          <table class="table">
            <thead>
              <tr>
                <th scope="col">名稱</th>
                <th scope="col">品項</th>
                <th scope="col">時間</th>
              </tr>
            </thead>
              <tbody>
                <% @foods.each do |f| %>
                  <tr>
                    <td scopr="col"><%= f.name %></td>
                    <td scope="col"><%= f.eat_type %></td>
                    <td scope="col"><%= f.created_at %></td>
                  </tr>
                <% end %>
              </tbody>
          </table>
        </li>
    </div>
  </div>
</container>





