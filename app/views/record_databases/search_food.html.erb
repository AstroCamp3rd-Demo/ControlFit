
<section class="food">
  <div class="container-fluid">
    <div class="row search">
      <div class="col-12 col-sm-12">
        <!-- <h2 class="title">飲食點將錄</h2>  -->
          <div class="form-row">
            <div class="column is-2"></div>
            <div class="column is-6 js-type">
              <% if current_member.present? %>
              <div class="col-md-6 mb-3"><i class="fas fa-user-circle"></i> <%= current_member.name %> </div>
              <% else %>
              <div class="col-md-6 mb-3"><i class="fas fa-user-circle"></i></div>
              <% end %>
            </div>
          </div>
          <div class="form-row">
            <div class="column is-2"></div>
            <div class="column is-6 js-type">
              <input class="input" id="searchfood" type="text" placeholder="來個食物吧!">
            </div>
            <div class="column is-2">
              <button class="button is-success is-light js-search" data-id="searchfood" > <i class="fas fa-search"></i></button>
            </div>
            <div class="column is-2"></div>
          </div>
          <div class="form-row">
            <div class="column is-2">
            </div>
            <div class="column is-3 add_item">
                <p>找不到食物資料嗎 ?</p>
            </div>
            <div class="column is-6 add_item">
              <button type="button" class="button is-info is-small is-light" id="Add_food_record_by_user"> <i class="fas fa-hammer"></i> :: 新增飲食紀錄 </button>
            </div>
          </div>
        <div class="form-row">
          <div class="col-md-9 md-3 " id="query-table">
            <table class="table table-hover" id="query-food">
              <thead>
                <tr>
                  <th colspan="6" scope="col"> <i class="fas fa-list"></i> 食物點將錄</th>
                  <th scope="col"><button class="button is-primary is-small is-light js-endsearch" id="End_search" > <i class="fas fa-arrow-circle-left"></i>  "結束搜尋"</button></th>
                </tr>
                <tr>
                  <td scope="col"># </td>
                  <td scope="col">食品名稱</td>
                  <td scope="col">卡路里</td>
                  <td scope="col">蛋白質</td>
                  <td scope="col">體脂肪</td>
                  <td scope="col">碳水化合物</td>
                  <td scope="col"><i class="fas fa-clipboard"></i> 加入紀錄</td>
                </tr>
              </thead>
              <tbody id="foodresult">
              </tbody>
            </table>
          </div>
        </div>
        <div class="form-row" id="Add_food_record">
        </div>
        <div class="form-row" id="Add_food_record_type">
        </div>
        <div class="form-row" id="Edit_food_record">
        </div>
      </div>
    </div>
    <div class="row result">
      <div class="col-12 col-sm-12">
        <div class="daily-record">
          <h2 class="title"> 今日狀態點將錄</h2>
          <div class="row">
            <div class="col-1"></div>
            <div class="col-10">
              <article class="message is-info ">
              <div class="message-body">
                <% if current_member.present? %>
                <i class="fas fa-user-circle"></i> <%= current_member.name %> </br>    
                    <% if @current_user_secret.foodintention.blank? %>
                       根據飲食傾向 : 還沒有資料喔 ! <i class="far fa-sad-cry"></i> </br>
                    <% else %>
                       根據飲食傾向 : <%=@current_user_secret.foodintention %> </br>
                    <% end %>
                    <% if @current_user_secret.sportintention.blank? %>
                       根據運動傾向 :  還沒有資料喔 ! <i class="far fa-sad-cry"></i> </br>
                    <% else %>
                       根據運動傾向 : <%= @current_user_secret.sportintention %></br>
                    <% end %>
                    每日所需的熱量為 : <li class="tdee"><%= @current_user_secret.tdee %> </li>大卡</br>
                    <i class="fas fa-clipboard-list"></i> 共 : <li class="count_message"> <%= @record_foods.size %></li> 筆 </br>
                    <i class="fas fa-utensils"></i> 共 : <li class="sum_message">   <%= @sum %></li> 大卡 </br>
                     今天狀態  : <i class="far fa-arrow-alt-circle-right"></i> <li class="delta_message"><%= @daily_delta %> </li>大卡 
                    <button class="button is-link is-warning is-small is-light is-rounded js-more"><i class="fas fa-comment-dots"></i>更多資訊</button> <button class="button is-link is-success is-small is-light is-rounded js-recommend"><i class="far fa-thumbs-up"></i> 推薦食物清單</button>
                    <button class="button is-link is-danger is-small is-light is-rounded js-favorite"><i class="far fa-heart"></i> 最愛食物 </<button> </br>
                    
                <% else %>
                    還沒有登入喔!!!!!!!!!
                <% end %>    
              </div>
              </article>
            </div>
            <div class="col-1"></div>
          </div>
          </br>
          <div class="form-row">
          <table class="table table-sm" id="daliy-food">
            <thead>
              <tr>
                <% if @record_foods.present? %>
                <th  colspan="3" scope="col"> <i class="fas fa-clipboard-list"></i> : 今日飲食點將錄   共 : <div class="totalcount" > <%= @record_foods.size %></div> 筆</th>
                <th  colspan="1"></th>
                <th  colspan="3">  <i class="fas fa-utensils"></i> : 共 <div class="totalsum" > <%= @sum %></div>  大卡  </th>
                <% else %>
                <th  colspan="3" scope="col"> <i class="fas fa-clipboard-list"></i> : 今日飲食點將錄   共 : <div class="totalcount" > 0 </div>  筆 </th>
                <th  colspan="1" ></th>
                <th  colspan="3"> <i class="fas fa-utensils"></i> : 共 <div class="totalsum" > 0 </div>  大卡  </th>
                <% end %>
              </tr>
            </thead>
            <tbody id="dailyfood">
              <tr>
                <th scope="col">編號</th>
                <th scope="col">時間</th>
                <th scope="col">類型</th>
                <th scope="col">食品名稱</th>
                <th scope="col">份數</th>
                <th scope="col">吃多少</th>
                <th scope="col">懺悔時間</th>
              </tr>
              <% if @record_foods.present? %>              
                <% @record_foods.each_with_index do |record_food, index| %>
                <tr class="daily_food_result" >
                  <td class="index"> <%= index+1 %></td>
                  <td class="time"> <%= record_food.created_at.strftime("%F") %></td>
                  <td class="type"> <%= record_food.eat_type %></td>                  
                  <td class="name"> <%= record_food.name %></td>
                  <td class="qty"> <%= record_food.qty %></td>
                  <td class="foodsum"> <%= record_food.total_calorie %></td>
                  <td>
                    <button data-id="<%= record_food.id %>" class="button is-warning is-small is-light js-edit"><i class="fas fa-pencil-alt"> </i></button>
                    <button data-id="<%= record_food.id %>" class="button is-danger is-small is-light js-del"><i class="fas fa-trash"> </i></button>
                  </td>
                </tr>
                <% end %>
              <% else %>
              <% end %>
            </tbody>
            <tfoot>
              <% if @record_foods.present? %>
              <% else %>
              <% end %>
            </tfoot>
          </table>
          <table class="table table-sm" id="recommend-food">
            <thead>
              <tr>
                <th colspan="7" scope="col"> <i class="fas fa-list"></i> 推薦食物清單</th>
              </tr>
              <tr>
                <td scope="col"># </td>
                <td scope="col">食物名稱</td>
                <td scope="col">卡路里</td>
                <td scope="col">蛋白質</td>
                <td scope="col">體脂肪</td>
                <td scope="col">碳水化合物</td>
                <td scope="col"><i class="fas fa-clipboard"></i> 加入紀錄</td>
              </tr>
            </thead>
            <tbody id="recommend">
            </tbody>
          </table>            
          </div>

        </div>
      </div>
    </div>
  </div>
</section>