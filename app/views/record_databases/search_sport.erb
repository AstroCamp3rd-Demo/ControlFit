
<div id="sport">
  <div class="container" >
    <div class="row">
      <div class="col-md-3">
        <div class="row">
          <div class="col-md-6 mb-3"><i class="fas fa-user-circle"></i>  {{user_info.name}}  </div>
        </div>
        <div class="row">
          <div class="column is-6">
            <input class="input" type="text" v-model="message" placeholder="來個運動吧">
          </div>
          <div class="column is-2">
            <button class="button is-success" @click="submit">Search</button>
          </div>
        </div>
      </div>
      <div class="col-md-8">
        <div class="row">
          <div class="column">
            <table class="table table-hover" id="query-sport">
            <thead>
              <tr>
                <th scope="col"></i></th>
                <th scope="col"><i class="fas fa-running"></i></th>
                <th colspan="5">運動30分鐘所消耗熱量(60Kg為例) 單位:大卡</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td> # </td>
                <td> 運動項目 </td>
                <td> 甩多少 </td>
                <td> 體重   </td>
                <td> 奮鬥時間(min) </td>
                <td> 成果再這邊 </td>
                <td> 記起來!!! </td>
              </tr>
              <tr v-for="(sport, idx) in sports" >
                <td>{{idx+1}}</td>
                <td>{{sport.name}}</td>
                <td>{{sport.consume_60kg}}</td>
                <td width="80px"> <input class="input is-danger"  v-model="weight" type="password" placeholder="不能說的秘密" disabled="disabled"></td>
                <td width="110px"> <input class="input is-primary" v-model="min"    type="number" placeholder="誠實的打下去"></td>
                <td :keyup="consume">{{sport.computed}}</td>
                <td><button @click="sport_record(idx)"  class="fas fa-plus-circle"  ></button></td>
              </tr>
            </tbody>
            </table>
            </br>
            <table class="table table-hover" id="record-sport">
              <thead>  
                <tr>
                  <th colspan="2"><i class="fas fa-calendar-day"></i> :  {{currentDay}} </th>
                  <th colspan="2"><i class="fas fa-clock"></i> :  {{currentTime}}</th>
                  <th colspan="1"> 看看今天燃燒多少<i class="fas fa-fire"></i></th>
                  <th></th>
                </tr>
              </thead>
              <tbody>  
                <tr>
                  <td> # </td>
                  <td> 紀錄時間 </td>
                  <td> 運動項目 </td>
                  <td> 奮鬥時間 </td>
                  <td> 燃燒值   </td>
                  <td> 誠實豆沙包</td>
                </tr>
                <tr v-for="(record, index) in daily_sport" >
                  <td>{{index+1}}</td>
                  <td>{{record.created_at}}</td>
                  <td>{{record.name}}</td>
                  <td v-if="editstatus[index] !== true">{{record.min}}</td>
                  <td width="110px" v-else ><input class="input is-primary" v-model= "daily_sport[index].min" type="number" placeholder=""></td>
                  <td>{{record.totalconsum}}</td>
                  <td>
                    <button @click="edit_record(index)" class="button is-warning is-small is-light"> <i class="fas fa-user-edit"> </i>Edit</button>
                    <button v-if="editstatus[index] === true" @click="update_record(index)"class="button is-success is-small is-light"> <i class="fas fa-save"></i></button>
                    <button @click="delete_record(index)"class="button is-danger is-small is-light"> <i class="fas fa-cut"> </i> Del </button>
                  </td>                 
                </tr>
              </tbody>
              <tfoot>
                  <tr>
                    <td colspan="2">  Count : {{daily_count}} </td>
                    <td></td>
                    <td colspan="2"> 今天燒多少: {{daily_sum}} 大卡</td>
                    <td></td>
                  </tr>
              </tfoot>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
